<h1>Create New Account</h1>

<%= form_for @user do |f| %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
  <table>
    <tr>
      <td>
        <%= f.label :name %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :username %>
      </td>
      <td>
        <%= f.text_field :username %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password %>
      </td>
      <td>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password_confirmation %>
      </td>
      <td>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
  </table>
  <br>
  <%= f.submit "Create Account"%>
<% end %>
